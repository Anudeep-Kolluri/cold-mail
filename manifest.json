{
  "manifest_version": 3,
  "name": "Cold Mail Extension",
  "version": "1.0",
  "description": "Right-click selected email to send a cold email.",
  "permissions": ["contextMenus", "scripting", "tabs"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
